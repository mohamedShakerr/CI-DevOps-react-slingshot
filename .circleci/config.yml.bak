
version: 2.1

jobs:
  build:
    docker:
      - image: circleci/node:13.8.0
    steps:
      - checkout
      - run: npm i
      - save_cache:
            keys: "npm_packages"
            paths:
                - /src/node_modules
      - run: npm run lint
          
  test:
    docker:
      - image: circleci/node:13.8.0
    steps:
      - checkout
      - restore_cache:
            keys:
                - npm_packages
      - run: npm run test          

  analyze:
    docker:
      - image: circleci/node:13.8.0
    steps:
      - checkout
      - restore_cache:
            keys:
                - npm_packages
      - run: npm aduit       


workflows:
  my-workflow:
    jobs:
      - build
      - test:
            requires:
                - build
      - analyze:
            requires:
                - test
